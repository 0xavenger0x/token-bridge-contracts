{
    "name": "arb-provider-ethers",
    "version": "0.3.2",
    "description": "Arbitrum provider for ethers",
    "author": "Offchain Labs, Inc.",
    "license": "Apache-2.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/offchainlabs/arbitrum.git",
        "directory": "packages/arb-provider-ethers"
    },
    "bugs": {
        "url": "https://github.com/offchainlabs/arbitrum/issues"
    },
    "homepage": "https://offchainlabs.com",
    "scripts": {
        "prepublishOnly": "npm run lint && npm run format && npm run test",
        "preversion": "npm run lint",
        "build": "tsc && cp src/lib/abi/index.d.ts src/lib/abi/ArbRollup.d.ts src/lib/abi/GlobalPendingInbox.d.ts dist/lib/abi",
        "test": "jest --config jest.config.js",
        "format": "npx prettier '**/*.{js,json,md,ts,yml}' --write && npm run lint --fix",
        "lint": "npx eslint src/**/*.ts tests/**/*.ts",
        "update-abi": "./scripts/update-abi && npm run format"
    },
    "dependencies": {
        "@types/node-fetch": "^2.5.4",
        "ethers": "^4.0.44",
        "jayson": "^3.2.0",
        "node-fetch": "^2.6.0",
        "promise-poller": "^1.9.1",
        "solidity-bytes-utils": "^0.0.8"
    },
    "devDependencies": {
        "@types/jest": "^25.1.1",
        "jest": "^25.1.0",
        "jest-junit": "^10.0.0",
        "prettier": "^1.19.1",
        "ts-jest": "^25.2.0",
        "typechain": "^1.0.4",
        "typechain-target-ethers": "^1.0.3",
        "typescript": "^3.7.5"
    },
    "files": [
        "dist/**/*"
    ]
}

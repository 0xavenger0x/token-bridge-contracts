{
  "name": "arb-bridge-eth",
  "private": true,
  "version": "0.2.0",
  "description": "",
  "author": "Offchain Labs, Inc.",
  "license": "Apache-2.0",
  "main": "truffle-config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OffchainLabs/arbitrum.git"
  },
  "bugs": {
    "url": "https://github.com/offchainlabs/arbitrum/issues"
  },
  "homepage": "https://offchainlabs.com/",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "truffle compile",
    "flatten": "truffle-flattener contracts/* > arbitrum_flat.sol",
    "truffle": "truffle",
    "docker:build:parity": "docker build -t arb-bridge-eth .",
    "docker:build:ganache": "docker build -t arb-bridge-eth-ganache -f ganache.Dockerfile .",
    "docker:parity": "docker run -p 7545:7545 -p 7546:7546 -it arb-bridge-eth --geth --chain parity/poa.json",
    "docker:ganache": "docker run -p 7545:7545 -it arb-bridge-eth-ganache -m \"jar deny prosper gasp flush glass core corn alarm treat leg smart\" -a 15 -b2"
  },
  "module": {
    "loaders": [
      {
        "test": ".sol",
        "loader": "truffle-solidity"
      }
    ]
  },
  "dependencies": {
    "@openzeppelin/contracts": "^2.4.0"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.4",
    "truffle": "^5.0.33",
    "truffle-flattener": "^1.4.0"
  },
  "workspaces": {
    "nohoist": [
      "@openzeppelin/contracts"
    ]
  }
}

#!/bin/bash
### --------------------------------------------------------------------
### launch-parity
### --------------------------------------------------------------------

docker network inspect arb-network >/dev/null 2>&1 || \
    docker network create --driver bridge arb-network
rm -rf deployments/parity_44010
DOCKERID=$(docker run --rm -p 7545:7545 -p 7546:7546 --network=arb-network -d -it --name arb-bridge-eth-geth arb-bridge-eth-geth --networkid=44010 --rpc --rpcaddr 0.0.0.0 --rpcport 7545 --rpccorsdomain="*" --rpcapi 'personal,db,eth,net,web3,txpool,miner' --ws --wsaddr 0.0.0.0 --wsport 7546 --wsorigins '*' --wsapi personal,admin,db,eth,net,web3,miner,shh,txpool,debug)
while ! nc -z localhost 7545; do sleep 2; done;
yarn buidler deploy --network parity
docker attach ${DOCKERID}
